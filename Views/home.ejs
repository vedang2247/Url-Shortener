<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body{
            font-family: Arial, Helvetica, sans-serif;
        }
    </style>
</head>
<body>
    <h1>Url Shortener</h1>

    <div>
        <form action="/url" method="POST">
            <label>Enter Your Input URL</label>
            <input type="text" name="oldUrl" placeholder="https://example.com">
            <button type="submit">Generate</button>
        </form>
    </div>
    <div>
        <% if (locals.id) { %>
            <p>Url Generated : http://localhost:8000/url/<%= locals.id %></p>
        <% } %>
    </div>
    <div>
        <% if (locals.urls) { %>
         <table>
            <thead>
                <th>S. No</th>
                <th>Short Url</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                <tr>
                 <td><%= index+1 %></td>
                 <td><%= url.shortId %></td>
                 <td><%= url.redirectUrl %></td>
                 <td><%= url.visitHistory.length %></td>
                </tr>
                <% }) %>
            </tbody>
         </table>
        <% } %>
    </div>
</body>
</html>